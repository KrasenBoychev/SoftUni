<article class="recipe-detail">
    {{#with recipe}}
    <img src="{{image}}"
        alt="{{title}}">
    <h2>{{title}}</h2>
    <p>{{description}}</p>

    <h3>-----------------------------------------------------</h3>

    <h3>Ingredients:</h3>
    <p>{{ingredients}}</p>

    <h3>-----------------------------------------------------</h3>

    <h3>Instructions:</h3>
    <p>{{instructions}}</p>

    <h3>-----------------------------------------------------</h3>

    <h3>People Who Recommend: {{recommendList.length}}</h3>
    {{/with}}
</article>

{{#if hasUser}}
<div class="command">
    {{#if isOwner}}
    <a href="/edit/{{recipe._id}}">Edit</a>
    <a href="/delete/{{recipe._id}}">Delete</a>
    {{else}}
        {{#if hasRecommended}}
        <p>You've already recommended this recipe!</p>
        {{else}}
        <a href="/recommend/{{recipe._id}}">Recommend</a>
        {{/if}}
    {{/if}}
</div>
{{/if}}