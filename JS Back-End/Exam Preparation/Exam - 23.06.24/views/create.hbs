<section class="form-container">
    <h2>Create Recipe</h2>
    <form action="#" method="post">
        <label for="title">Recipe Title:</label>
        <input type="text" id="title" name="title" {{#if errors}}value="{{data.title}}"{{/if}}>

        <label for="description">Description:</label>
        <textarea id="description" name="description">{{#if errors}}{{data.description}}{{/if}}</textarea>

        <label for="ingredients">Ingredients:</label>
        <textarea id="ingredients" name="ingredients">{{#if errors}}{{data.ingredients}}{{/if}}</textarea>

        <label for="instructions">Instructions:</label>
        <textarea id="instructions" name="instructions">{{#if errors}}{{data.instructions}}{{/if}}</textarea>

        <label for="image">Image URL:</label>
        <input type="url" id="image" name="image" {{#if errors}}value="{{data.image}}"{{/if}}>

        <button type="submit">Create Recipe</button>
    </form>
</section>